{
  "dashboard": {
    "id": null,
    "title": "Model Performance Monitoring",
    "panels": [
      {
        "id": 1,
        "title": "Model Retraining Pipeline Status",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "thunderai_retraining_pipeline_status",
            "legendFormat": "{{model_id}}"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "textMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "Model Performance Metrics",
        "type": "timeseries",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "thunderai_model_accuracy",
            "legendFormat": "Accuracy - {{model_id}}"
          },
          {
            "expr": "thunderai_model_latency_seconds",
            "legendFormat": "Latency - {{model_id}}"
          }
        ],
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          }
        }
      },
      {
        "id": 3,
        "title": "Data Drift Detection",
        "type": "gauge",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "thunderai_data_drift_score",
            "legendFormat": "{{feature}}"
          }
        ],
        "options": {
          "minValue": 0,
          "maxValue": 1,
          "thresholds": [
            { "value": 0.3, "color": "green" },
            { "value": 0.7, "color": "yellow" },
            { "value": 0.9, "color": "red" }
          ]
        }
      },
      {
        "id": 4,
        "title": "Training Resource Usage",
        "type": "timeseries",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "thunderai_training_gpu_memory_used",
            "legendFormat": "GPU Memory"
          },
          {
            "expr": "thunderai_training_cpu_usage",
            "legendFormat": "CPU Usage"
          }
        ]
      },
      {
        "id": 5,
        "title": "Model Prediction Distribution",
        "type": "piechart",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "thunderai_prediction_class_distribution",
            "legendFormat": "{{class}}"
          }
        ]
      }
    ],
    "refresh": "5s",
    "schemaVersion": 30,
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    }
  }
} 